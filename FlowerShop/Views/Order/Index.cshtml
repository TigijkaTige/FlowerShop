@model FlowerShop.Models.Orders
@{
}
<h1>Офромление заказа</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label><br />
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliverDate" class="control-label"></label>
                <input asp-for="DeliverDate" class="form-control" />
                <span asp-validation-for="DeliverDate" class="text-danger"></span>
            </div>
            <h3>Оплата происходит после получение заказа (в живую?)</h3>
            <div class="form-group">
                <input type="submit" value="Заказать" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Все заказы</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
